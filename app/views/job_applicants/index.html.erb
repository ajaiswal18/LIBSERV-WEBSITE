<p id="notice"><%= notice %></p>

<h1>Listing Job Applicants</h1>

<table class="table table-bordered table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Emailid</th>
      <th>Contact no</th>
      <th>Applying for</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_applicants.each do |job_applicant| %>
      <tr>
        <td><%= job_applicant.name %></td>
        <td><%= job_applicant.emailid %></td>
        <td><%= job_applicant.contact_no %></td>
        <td><%= job_applicant.applying_for %></td>
        <td><%= job_applicant.attachment %></td>
        <td><%= link_to 'Show', job_applicant %></td>
        <td><%= link_to 'Edit', edit_job_applicant_path(job_applicant) %></td>
        <td><%= link_to 'Destroy', job_applicant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job applicant', new_job_applicant_path %> | <%= link_to "Logout", destroy_admin_session_path, :method => :delete %>
