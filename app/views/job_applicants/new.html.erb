      <font  color = "#333399" size = "5">Apply For The Job</font><hr width="80%" align = "left">
<%= form_for @job_applicant, html: { multipart: true } do |f| %>
  <% if @job_applicant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job_applicant.errors.count, "error") %> prohibited this job_applicant from being saved:</h2>

      <ul>
      <% @job_applicant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Your Name :" %><br>
    <%= f.text_field :name, :size=>"50", :maxlength=>"50" , :placeholder => "Enter Full Name"%>
  </div>
  <div class="field">
    <%= f.label :Email_Id, "E-Mail ID :" %><br>
    <%= f.text_field :emailid, :size=>"50", :maxlength=>"50", :placeholder => "Enter Valid Email ID"%>
  </div>
  <div class="field">
    <%= f.label :Contact_No, "Mobile Number :" %><br>
    <%= f.text_field :contact_no, :size=>"50", :maxlength=>"10", :placeholder => "10 Digit Mobile Number" %>
  </div>
  <div class="field">
    <%= f.label :applying_for, "Applying For Position :" %><%#= @job.Job_Title %><br>
    <%= f.text_field :applying_for, :value=>"#{@job.Job_Title}",  :size => "50" %>
    
  </div>
  <div class="field">
    <%= f.label :attachment, "Attach CV / Resume : (.doc, .docx, .pdf only)" %><br>
    <%= f.file_field :attachment %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Apply' %>
  </div>
<% end %>

</div>


